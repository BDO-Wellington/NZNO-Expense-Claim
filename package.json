{
  "name": "nzno-expense-claim",
  "version": "1.0.0",
  "description": "NZNO Expense Claim Form Application",
  "type": "module",
  "scripts": {
    "dev": "bun run dev:all",
    "dev:all": "bun run dev:mock & bun run dev:serve",
    "dev:serve": "bunx serve -p 5173",
    "dev:mock": "bun run mock-server.js",
    "test": "bun test js/modules/__tests__/ tests/",
    "test:watch": "bun test --watch js/modules/__tests__/ tests/",
    "test:coverage": "bun test --coverage js/modules/__tests__/ tests/",
    "test:ci": "bun test --bail --coverage js/modules/__tests__/ tests/",
    "test:filter": "bun test -t",
    "test:flaky": "bun test --rerun-each 3",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report"
  },
  "author": "James McNeil",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.57.0"
  }
}
